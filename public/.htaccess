<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If it's a real file, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Everything else (including directories) â†’ SPA
  # This prevents 403 when a directory like /demos/ exists but has no index.html
  RewriteRule ^ /index.html [L]
</IfModule>
